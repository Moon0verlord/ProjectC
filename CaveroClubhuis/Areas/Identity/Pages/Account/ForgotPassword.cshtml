@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_EmptyLayout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- link for remixicons icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" />
    <link rel="stylesheet" href="~/css/user-auth.css" />
</head>

<body class="css-selector">
<div class="login d-flex align-items-center justify-content-center">
    <form method="post" action="" class="reset_password_form">
        <img class="logo" src="~/images/logo.png" alt="Cavero Logo" width="50" height="50">
        <h1 class="login_title">Je Wachtwoord Vergeten?  </h1>

        <div class="login_register">
                Nog geen account? <a href="./Register">Registreer hier!</a>
        </div>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                <button type="submit" class="login_button">&rarr; Reset Wachtwoord</button>
                    </form>
    </form>
</div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
