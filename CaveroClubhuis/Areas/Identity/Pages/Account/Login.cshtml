@page
@model Microsoft.AspNetCore.Identity.UI.V5.Pages.Account.Internal.LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_EmptyLayout.cshtml";
    // TODO create a new font family
    // TODO make box bigger on bigger screens
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- link for remixicons icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" />
    <style>
        @@media screen and (min-width: 576px) {
            .login {
                justify-content: center;
            }

            .login_form {
                width: 600px;
                padding-inline: 2.5rem;
            }

            .login_title {
                margin-bottom: 2rem;
            }
        }

        .login {
            position: relative;
            height: 100vh;
            display: grid;
            align-items: center;
        }
        
        .logo {
        display: block;
        margin: 0 auto;
        margin-bottom: 30px;

        }
        

        .login_form {
            margin-inline: 1.5rem;
            background-color: hsl(0,0%,98%);
            border: 2px solid hsla(0,0%,100%, .7);
            padding: 2.5rem 1rem;
            color: #000000;
            border-radius: 1rem;
            box-shadow: 5px 5px 4px rgba(0, 0, 0, 0.5);
        }

        .login_title {
            text-align: center;
            font-size: 3rem;
            margin-bottom: 1.25rem;
        }

        .login_input, .login_box {
            display: grid;
        }

        .login_input {
            row-gap: 1rem;
            margin-bottom: 0.1rem;
        }

        .login_box {
            grid-template-columns: 1fr max-content;
            column-gap: .75rem;
            align-items: center;
            border: 2px solid hsl(0,0%,16%);
            padding-inline: 1.25rem;
            border-radius: 1rem;
        }

        .login_input {
            align-content: center;
            width: 100%;
            background: none;
            color: #282828;
            padding-block: 1rem;
        }

            .login_input::placeholder {
                color: #000000;
            }

        .login_box i {
            font-size: 1.25rem;
        }

        .login_check, .login_check-box {
            display: flex;
            justify-content: space-between;
        }

        .login_check {
            margin-bottom: 1rem;
            font-size: .813rem;
        }

        .login_check-box {
            column-gap: .5rem;
        }

        .login_check-input {
            width: 1rem;
            height: 1rem;
            accent-color: white;
        }


        .login_button {
            width: 100%;
            padding: 1rem;
            margin-bottom: 1rem;
            background-color: #282828;
            border-radius: 1rem;
            color: #fafafa;
            font-weight: 500;
            cursor: pointer;
        }
        
        .login_button:hover {
            background-color: #000000;
        }
        

        .login_register {
            text-align: center;
            font-size: .813rem;
            text-decoration: none;
            margin-bottom: 10px;
        }

        .login_forgot {
            color: #000000;
            text-decoration: none;
        }

            .login_register a, .login_forgot a {
                color: #000000;
                text-decoration: none;
            }

                .login_register a:hover, .login_forgot a:hover {
                    color: blue;
                    text-decoration-color: blue;
                }

        .login_button, .login_input {
            border: none;
            outline: none;
        }
    </style>
</head>

<body style="background-color:#803689">
<div class="login">
    <!--image-->
    <form method="post" action="" class="login_form">
        <img class="logo" src="~/images/logo.png" alt="Cavero Logo" width="50" height="50">
        <h1 class="login_title">Sign in</h1>

        <div class="login_register">
            Don't have an account yet? <a href="./Register">Sign up!</a>
        </div>

        <div class="login_input">
            <div class="login_box">
                <input type="email" asp-for="Input.Email" placeholder="Email" required class="login_input">
                <i class="ri-mail-fill"></i>
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="login_box">
                <input type="password" asp-for="Input.Password" placeholder="Password" required class="login_input">
                <i class="ri-lock-2-fill"></i>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

        </div>

        <div class="login_check">
            <div class="login_check-box">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe"/>
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <a asp-page="./ForgotPassword" class="login_forgot">Forgot Password?</a>
        </div>

        <button type="submit" class="login_button">&rarr; Login</button>
    </form>
</div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}